<ugh>
  <hint ref="*">
    <layoutstyle>vertical</layoutstyle>
    <appearance>full</appearance>
  </hint>
  <hint ref="/category">
    <listSearch>true</listSearch>
  </hint>
  <hint ref="category/feature">
    <label>Feature: <itemLabelArg ref="summary" truncate="50"/></label>
  </hint>
  <hint ref="/feature">
    <listItemLabels>
      <listItemLabel ref="summary"><itemLabelArg ref="/summary" truncate="40"/></listItemLabel>
      <listItemLabel ref="@status"><itemLabelArg ref="/@status"/></listItemLabel>
      <listItemLabel ref="@target"><itemLabelArg ref="/@target"/></listItemLabel>
    </listItemLabels>
  </hint>
  <hint ref="feature/responsible">
    <label><arg ref="@name"/> &lt;<arg ref="@email"/>&gt;</label>
  </hint>
  <hint ref="arch">
    <label>Architecture</label>
  </hint>
  <hint ref="@name">
    <label>Name :)</label>
    <layoutstyle>vertical</layoutstyle>
  </hint>
  <hint ref="@status">
    <position><rightOf>@target</rightOf></position>
  </hint>
  <hint ref="@email">
    <listHeader>Email Address</listHeader>
    <position><rightOf>@name</rightOf></position>
  </hint>
  <hint ref="category">
    <listItemList>true</listItemList>
  </hint>
</ugh>
